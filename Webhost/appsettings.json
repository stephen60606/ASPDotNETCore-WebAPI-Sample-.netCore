{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    },
    "AllowedHosts": "*",
    "UseSwagger": true,
    "ConnectionStrings": {
        //mysql
        "Demo": "server=localhost;Port=3306;Database=your_db_name; User=your_user_name;Password=your_password;",
        //mssql
        //"Demo": "Data Source=localhost:3306;Initial Catalog=your_db_name; Persist Security Info=True;User ID=your_user_id;Password=your_password"
        //oracle
        //"Demo": "Data Source=localhost,3306; Initial Catalog=your_db_name; Persist Security Info=True;User ID=your_user_id;Password=your_password"

    },
    "AssemblyPrefixes": "Demo,Entities",
    "ImagePath": "",
    "GetImagePath": "",
    "NLog": {
        "throwConfigExceptions": true,
        "targets": {
            "logfile": {
                "type": "File",
                "fileName": "../../../../../NLog/log-${shortdate}.log"
            },
            "logconsole": {
                "type": "Console"
            }
        },
        "rules": [
            {
                "logger": "*",
                "minLevel": "Info",
                "writeTo": "logconsole"
            },
            {
                "logger": "*",
                "minLevel": "Debug",
                "writeTo": "logfile"
            }
        ]
    }
}

